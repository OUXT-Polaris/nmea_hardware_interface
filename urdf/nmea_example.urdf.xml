<robot name="test_robot">
  <link name="gps_link"/>

  <link name="gps_optical_link"/>
  <joint name="gps_optical_joint" type="fixed">
    <parent link="gps_link"/>
    <child link="gps_optical_link"/>
    <origin rpy="-1.57079632679 0 -1.57079632679" xyz="0 0 0"/>
  </joint>

  <ros2_control name="gps_control" type="sensor">
    <hardware>
      <plugin>nmea_hardware_interface/GPSHardwareInterface</plugin>
      <param name="latitude">geopose_.position.latitude</param>
      <param name="longitude">geopose_.position.latitude</param>
      <param name="altitude">geopose_.position.altitude</param>
    </hardware>
    <joint name="gps_link">
    </joint>
  </ros2_control>
</robot>